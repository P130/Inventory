@model IEnumerable<InventorySystem.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model_Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List_Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model_Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.List_Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Product_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Product_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Product_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
